{{#section 'css'}}
    <link href="/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/assets/css/bootstrap-social.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="/assets/css/breadcrumbs.css">
    <link href="/assets/css/docs.css" rel="stylesheet">
{{/section}}
{{#section 'js'}}
    <script type="text/javascript">

    $('.resetAcc').on('click', function() {
        var id = $(this).data('id');
        $('#txtResetAccId').val(id);
        $('#frmResetAcc').submit();
    });

    $('.removeAcc').on('click', function() {
        var id = $(this).data('id');
        $('#txtDelAccId').val(id);
        $('#frmDeleteAcc').submit();
    });

    $('.downAcc').on('click', function() {
        var id = $(this).data('id');
        $('#txtDownAccId').val(id);
        $('#frmDownAcc').submit();
    });
    </script>
{{/section}}
{{#section 'breadcrumbs'}}
    <div class="row">
        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="/home">Trang chủ</a></li>
            <li class="active"><span>Quản trị tài khoản</span></li>
        </ol>
        <!-- /Đường dẫn -->
    </div>
{{/section}}
{{> managerPanel this}}
<div class="col-md-9">
    {{#if showError }}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> {{ errorMsg }}
        </div>
    {{/if}}
    <div class="panel panel-default" style="border-color: #189eff;">
        <div class="panel-heading" style="background-color: slateblue;">
            <span class="panel-title">Danh sách tài khoản</span>
        </div>
        <div class="panel-body">
            <form method="post" action="/manager/account/reset" id="frmResetAcc">
                <input type="hidden" name="accId" id="txtResetAccId">
            </form>
            <form method="post" action="/manager/account/delete" id="frmDeleteAcc">
                <input type="hidden" name="accId" id="txtDelAccId">
            </form>
             <form method="post" action="/manager/account/down" id="frmDownAcc">
                <input type="hidden" name="accId" id="txtDownAccId">
            </form>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Tên</th>
                        <th>Loại tài khoản</th>
                        <th>Reset mật khẩu</th>
                        <th>Xóa tài khoản</th>
                        <th>Hạ cấp tài khoản</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each accounts}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{email}}</td>
                            <td>{{ten}}</td>
                            <td align="center">{{quyenhan}}</td>
                            
                            <td align="center">
                                <a href="javascript:;" class="btn btn-xs btn-primary resetAcc" data-id="{{id}}" title="reset">
                                    <span class="glyphicon glyphicon-cog"></span>
                                </a>
                               
                            </td>
                            <td align="center">
                                 <a href="javascript:;" class="btn btn-xs btn-danger removeAcc" data-id="{{id}}">
                                    <span class="fas fa-trash-alt"></span>
                                </a>
                            </td>
                             <td align="center">
                                 <a href="javascript:;" class="btn btn-xs btn-danger downAcc" data-id="{{id}}">
                                    <span class="fas fa-arrow-down"></span>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
