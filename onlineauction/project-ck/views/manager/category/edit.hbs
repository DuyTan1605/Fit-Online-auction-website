{{#section 'css'}}
    <link href="/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/assets/css/bootstrap-social.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="/assets/css/breadcrumbs.css">
    <link href="/assets/css/docs.css" rel="stylesheet">
{{/section}}
{{#section 'js'}}

{{/section}}
{{#section 'breadcrumbs'}}
    <div class="row">
        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="/home">Trang chủ</a></li>
            <li><a href="/manager/category">Quản trị danh mục</a></li>
            <li class="active"><span>Sửa danh mục</span></li>
        </ol>
        <!-- /Đường dẫn -->
    </div>
{{/section}}
{{> managerPanel this}}
<div class="col-md-9">
    {{#if showError }}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> {{ errorMsg }}
        </div>
    {{/if}}
    <div class="panel panel-default" style="border-color: #189eff;">
        <div class="panel-heading" style="background-color: slateblue;">
            <span class="panel-title">Chỉnh sửa thông tin danh mục</span>
        </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post" action="">
                <div class="form-group">
                    <label class="control-label col-sm-3" for="txtCatID">Mã danh mục</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="txtCatID" placeholder="name" name="catId" value="{{category.id}}" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="txtCatName">Tên danh mục</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="txtCatName" placeholder="name" name="catName" value="{{category.tendanhmuc}}">
                    </div>
                </div>
                 
                 <div class="form-group">
                    <label class="control-label col-sm-3" for="txtCatDadID">Tên danh mục cha</label>
                    <div class="col-sm-8">
                          <select class="form-control" id="catDadName" name="catDadName">
                                    {{#each layoutModels.catListDadFinal}}
                                        {{#isEqual ../category.id_danhmuccha id}}
                                        <option value= {{id}} selected="selected">{{tendanhmuc}}</option>
                                        {{else}}
                                        <option value= {{id}}>{{tendanhmuc}}</option>
                                        {{/isEqual}}
                                    {{/each}}
                                </select>
                    </div>
                </div>
              
                <div class="col-sm-offset-8 col-sm-3" style="text-align: right; padding: 0;">
                    <a href="/manager/category" class="btn btn-danger" title="back">
                        <span class="fas fa-backspace"></span>
                    </a>
                    <button type="submit" class="btn btn-success">
                        <span class="fas fa-check"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
