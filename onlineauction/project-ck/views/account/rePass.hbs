{{#section 'title'}} Đăng ký {{/section}}
{{#section 'css'}}
    <link href="/assets/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/assets/css/bootstrap-social.css" rel="stylesheet" type="text/css" media="all" />
    <link rel="stylesheet" type="text/css" href="/assets/css/breadcrumbs.css">
    <link href="/assets/css/docs.css" rel="stylesheet">
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <style type="text/css">
    label {
        font-weight: normal !important;
    }
    </style>
{{/section}}
{{#section 'js'}}
    <script src="/assets/jquery-validation-1.12.0/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/assets/bootstrap-4.3.1-dist/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
    <script type="text/javascript">
    $('.form_date').datetimepicker({
        //language:  'fr',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });

    function recaptchaCallback() {
        $('#hiddenRecaptcha').valid();
    };
    $('#frmRegister').validate({
        ignore: ".ignore",
        rules: {
            username: {
                required: true
            },
            rawPWD: {
                required: true,
                minlength: 8
            },
            cPWD: {
                equalTo: '#txtrawPWD'
            },
            name: {
                required: true
            },
           address: {
               required:true
           },
            
            email: {
                required: true,
                email: true
            },
            dob: {
                required: true
            },

            policy: {
                required: true
            },

            radioGender: {
                required: true
            },

            hiddenRecaptcha: {
                required: function() {
                    if (grecaptcha.getResponse() == '') {
                        return true;
                    } else {
                        return false;
                    }

                }
            }

        },

        messages: {
            username: {
                required: 'Vui lòng nhập username.'
            },
            rawPWD: {
                required: 'Vui lòng nhập mật khẩu',
                minlength: 'Mật khẩu phải dài ít nhất 8 ký tự'
            },
            cPWD: {
                equalTo: 'Mật khẩu nhập lại chưa khớp'
            },
            name: {
                required: 'Vui lòng nhập họ tên'
            },
            address:{
                required:'Vui lòng nhập địa chỉ'
            },
            email: {
                required: 'Vui lòng nhập email',
                email: 'Email không đúng định dạng'
            },
            dob: {
                required: 'Vui lòng chọn ngày sinh'
            },

            policy: {
                required: 'Vui lòng đồng ý với điều khoản của web'
            },

            radioGender: {
                required: 'Vui lòng chọn giới tính của bạn'
            },
            hiddenRecaptcha: {
                required: 'Nhập capcha'
            }
        },

        errorElement: 'span',
        errorClass: 'help-block',

        highlight: function(element) {
            $(element)
                .closest('.form-group')
                .addClass('has-error');
        },

        success: function(label) {
            $(label)
                .closest('.form-group')
                .removeClass('has-error');

            label.remove();
        },
    });
    </script>
{{/section}}
{{#section 'breadcrumbs'}}
    <div class="row">
        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="/home">Trang chủ</a></li>
            <li class="active"><span>Quên mật khẩu</span></li>
        </ol>
        <!-- /Đường dẫn -->
    </div>
{{/section}}
{{> categoriesPanel this}}
<div class="col-md-9">
    {{#if showError }}
        <div class="alert alert-warning alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> {{ errorMsg }}
        </div>
    {{/if}}
    <div class="panel panel-default" style="border-color: #189eff;">
        <div class="panel-heading" style="background-color:slateblue">
            <span class="panel-title">Quên mật khẩu </span>
        </div>
        <form class="form-horizontal" method="post" action="" id="frmRegister">
            <!-- form -->
            <div class="panel-body">
                <!-- panel body -->
                <div class="col-sm-8">
                    <!-- form -->

                    
                     <div class="form-group">
                        <!-- Email -->
                     
                        <label class="control-label col-sm-4" for="email">Email (*)</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="txtEmail" name="email" placeholder="Nhập email">
                        </div>
                    </div>
                    <div class="form-group">
                        <dir class="col-sm-offset-4 col-sm-8">
                            <div class="g-recaptcha" data-sitekey="6LeF_8cUAAAAAH4RBeAcvc78GBM7oK0bOMDZylF_" data-callback="recaptchaCallback"></div>
                            <input type="hidden" class="hiddenRecaptcha required" name="hiddenRecaptcha" id="hiddenRecaptcha">
                        </dir>
                    </div>
                </div>
            
              
            </div>
            <!-- panel body -->
            <div class="panel-footer"  style="background-color: white">
                <div class="col-sm-offset-2">
                    <button type="submit" class="btn btn-success"><i class="fas fa-user-check"></i> Xác nhận</button>
                     <button type="reset" class="btn btn-success" style="background-color: red;margin-left:25px"> <i class="fas fa-window-close"></i> Hủy</button>
                </div>
                
                   
               
            </div>
        </form>
        <!-- form -->
    </div>
</div>
